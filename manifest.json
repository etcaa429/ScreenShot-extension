{
  "manifest_version": 2,
  "name": "Screenshot 截圖工具",
  "version": "1.0",
  "description": "強大的截圖工具，支持滾動截圖、區域截圖等多種功能",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "contextMenus",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "screenshot.js"
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}